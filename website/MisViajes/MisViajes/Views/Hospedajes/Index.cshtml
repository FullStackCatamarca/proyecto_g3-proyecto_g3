@model IEnumerable<MisViajes.Models.Hospedajes>


<section class="page-title">
    <div class="page-title-img bg-img bg-overlay-darken" style="background-image: url(@Url.Content("~/assets/img/pages/page-title-bg11.jpg"));">
        <div class="container">
            <div class="row align-items-center justify-content-center" style="height: 200px;">
                <div class="col-lg-6">
                    <div class="page-title-content">
                        <div class="title-border">
                            <h2 class="text-uppercase text-white font-weight-bold">Hospedaje</h2>
                        </div>
                        <p class="text-white mb-0"></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<div class="row mt-2 ">
  
    <div class="col-12 ">
        @if (@ViewBag.Message == "Confirmado")
        {
            <a href="@Url.Action("Create")" class="btn  btn-primary  text-white">
                <i class="fa fa-plus" aria-hidden="true"></i>

                Agregar Nuevo Hospedaje
            </a>
        }
            </p>
        </div>
     
    </div>

    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="mb-6 bg-white p-3 pt-6 border-top border-top-5 border-primary rounded">
                    <h4 class="text-uppercase font-weight-bold">Filtrar Por</h4>

                    <select class="form-select selectric p-3 text-gray-color w-100 mb-2">
                        <option selected value="1">Provincia</option>
                    </select>
                    <select class="form-select selectric p-3 text-gray-color w-100">
                        <option selected value="2">Localidad</option>
                    </select>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="row mb-4">
                    <div class="col-md-6 col-xl-4">
                        <select class="form-select selectric p-3 text-gray-color" aria-label="Default select example">
                            <option selected value="1">ORDENAR POR CALIFICACIÓN</option>
                            <option value="3">ORDENAR POR PRECIO</option>
                        </select>
                    </div>
                </div>
                @foreach (var item in Model)
                {
                    <div class="row mb-4 border rounded">
                        <div class="col-md-4 p-0">

                            <div class="media-img position-relative">
                                <img class="rounded-left img-fluid position-relative" data-src="assets/img/holets/hotel-list-02.jpg" src="~/assets/img/holets/hotel-list-01.jpg" alt="gallery-img">
                                <a class="media-img-overlay" data-fancybox="gallery" href="assets/img/holets/hotel-list-02.jpg"></a>
                            </div>

                        </div>

                        <div class="col-md-6 mt-2 ">
                            <div class="row">
                                <div class="col-md-12  text-right">
                                    <p class="m-0"><span class="bg-primary rounded p-1 text-white">@Html.DisplayFor(modelItem => item.Puntuacion) <i class="fa fa-star" aria-hidden="true"></i></span></p>
                                </div>
                                <div class="col-md-12">
                                    <h4>
                                        <a class="media-title" href="single-hotel-right-sidebar.html">@Html.DisplayFor(modelItem => item.Nombre)</a>
                                    </h4>
                                    <p>
                                        @Html.DisplayFor(modelItem => item.Descripcion)
                                    </p>
                                </div>

                            </div>

                        </div>

                        <div class="col-md-2  pr-0  ">
                            <div class="bg-primary text-center p-3 view-details rounded h-100 ">
                                <h2 class="text-white font-weight-bold h1">$@Html.DisplayFor(modelItem => item.costo)</h2>
                                <p class="text-white text-capitalize">Por Noche</p>
                                <div>

                                    <a href=" @Url.Action("Details", "Hospedajes", new { id = item.Id })" class="btn btn-xs btn-block btn-outline-white btn-booking text-uppercase mb-2">Detalle</a>
                                </div>
                                @if (@ViewBag.Message == "Confirmado")
                                {
                                    <div>

                                        <a href=" @Url.Action("Delete", "Hospedajes", new { id = item.Id })" class="btn btn-xs btn-block btn-outline-white btn-booking text-uppercase mb-2">Eliminar</a>
                                    </div>

                                    <div>

                                        <a href=" @Url.Action("Edit", "Hospedajes", new { id = item.Id })" class="btn btn-xs btn-block btn-outline-white btn-booking text-uppercase mb-2">Editar</a>
                                    </div>
                                }
                                </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>


