@model MisViajes.Models.Hospedajes


<section class="page-title">
    <div class="page-title-img bg-img bg-overlay-darken" style="background-image: url(@Url.Content("~/assets/img/pages/page-title-bg11.jpg"));">
        <div class="container">
            <div class="row align-items-center justify-content-center" style="height: 200px;">
                <div class="col-lg-6">
                    <div class="page-title-content">
                        <div class="title-border">
                            <h2 class="text-uppercase text-white font-weight-bold">@Html.DisplayFor(model => model.Nombre)</h2>
                        </div>
                        <p class="text-white mb-0"></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="container ">
    <div class="row">
        <div class="col-md-12 mt-4 d-flex justify-content-center  ">
            <img class="w-50 img-fluid card " src="~/@Html.DisplayFor(model=>model.Fotourl)" alt="@Html.DisplayFor(model => model.Nombre)" />
        </div>
        <div class="col-md-12  mt-4">
            <h1>  @Html.DisplayFor(model => model.Nombre) <span class="bg-primary rounded p-1 text-white">@Html.DisplayFor(model => model.Puntuacion) <i class="fa fa-star" aria-hidden="true"></i></span></h1>

            <div class="row">
                <div class="col-md-10">
                    <p> @Html.DisplayFor(model => model.Descripcion)</p>

                </div>
                <div class="col-md-6">
                    <p class="text-primary font-weight-bold " style="font-size:22px"><i class="fa fa-map-marker" aria-hidden="true"></i>@Html.DisplayFor(model => model.Ubicacion)</p>
                    <p class="text-primary font-weight-bold " style="font-size:22px">$@Html.DisplayFor(model => model.costo)</p>
                    <button class="btn btn-xs btn-primary d-none d-lg-inline-block">Reservar</button>
                </div>
            </div>
        </div>
    </div>
    <div class="row mb-4 ">
        <div class="col-12 d-flex justify-content-end">
            <a href="@Url.Action("Index")" class="btn  btn-primary d-lg-inline-block text-white">
                <i class="fa fa-arrow-circle-left" aria-hidden="true"></i>
                Volver
            </a>

        </div>
    </div>
</div>


@section Scripts{}


