@model IEnumerable<MisViajes.Models.Provincias>

@{
    ViewBag.Title = "Provincias";
}


<div class="main-wrapper element-title">
    <!-- ====================================
    ———	PAGE TITLE
    ===================================== -->
    <section class="page-title">
        <div class="page-title-img bg-img bg-overlay-darken"
             style="background-image: url(@Url.Content("~/assets/img/pages/page-title-bg5.jpg"));">
            <div class="container">
                <div class="row align-items-center justify-content-center" style="height: 200px;">
                    <div class="col-lg-6">
                        <div class="page-title-content">
                            <div class="title-border">
                                <h2 class="text-uppercase text-white font-weight-bold">@ViewBag.Title</h2>
                            </div>
                            <p class="text-white mb-0"></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- ====================================
    ———	CONTACT INFO SECTION
    ===================================== -->
    <section>
        <div class="container">
           
            <div class="row align-items-center justify-content-center">
              
                <div class="col-md-11 col-lg-10 col-xl-10">
                
                    <table class="table table-striped">
                        <a href="@Url.Action("Create")" class=" btn w-100 mt-2  btn-primary d-lg-inline-block text-white text-align-center">
                            <i class="fa fa-plus" aria-hidden="true"></i>

                            Agregar Nueva Provincia
                        </a>
                        <tr class="text-uppercase">
                            <th>
                                NOMBRE PAIS
                            </th>

                            <th>
                                NOMBRE PROVINCIA
                            </th>

                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Pais.Nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nombre)
                                </td>

                                <td>
                                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Detalle", "Details", new { id = item.Id }) |
                                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })

                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </section>

</div><!-- element wrapper ends -->


@section Scripts{}