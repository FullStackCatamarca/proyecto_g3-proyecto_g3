@model IEnumerable<MisViajes.Models.UserRoleModel>
@{
    ViewBag.Title = "Rol de Usuario ";
}

<div class="main-wrapper dashboard">

    @Html.Partial("_headerDashboard")

</div>

<div class="main-wrapper">
    <!-- ====================================
    ———	PAGE TITLE
    ===================================== -->
    <section class="page-title">
        <div class="page-title-img bg-img bg-overlay-darken"
             style="background-image: url(@Url.Content("~/assets/img/pages/page-title-bg5.jpg"));"
            <div class="container">
                <div class="row align-items-center justify-content-center" style="height: 200px;">
                    <div class="col-lg-6">
                        <div class="page-title-content">
                            <div class="title-border">
                                <h2 class="text-uppercase text-white font-weight-bold">@ViewBag.Title</h2>
                            </div>
                            <p class="text-white mb-0"></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- ====================================
    ———	CONTACT INFO SECTION
    ===================================== -->
    <section class="py-9 pt-md-10">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-md-11 col-lg-10 col-xl-10">

                    <table class="table table-striped">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Nombre)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Roles)
                            </th>
                            <th>
                                Agregar
                            </th>
                            <th>
                                Quitar
                            </th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Roles)
                                </td>
                                <td>
                                    @Html.ActionLink("Admin", "AddUserRole", new { id = item.UserID, Role = "Administrador" })
                                    <br />
                                    @Html.ActionLink("Staff", "AddUserRole", new { id = item.UserID, Role = "Staff" })
                                </td>
                                <td>
                                    @Html.ActionLink("Admin", "RemUserRole", new { id = item.UserID, Role = "Administrador" })
                                    <br />
                                    @Html.ActionLink("Staff", "RemUserRole", new { id = item.UserID, Role = "Staff" })
                                </td>

                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </section>

</div><!-- element wrapper ends -->

@section Scripts{}