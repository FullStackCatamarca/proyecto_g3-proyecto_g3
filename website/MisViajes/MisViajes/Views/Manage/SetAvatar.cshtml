
@{
    ViewBag.Title = "Elegir Avatar";
}

<div class="main-wrapper element-title">
    <!-- ====================================
    ———	PAGE TITLE
    ===================================== -->
    <section class="page-title">
        <div class="page-title-img bg-img bg-overlay-darken"
             style="background-image: url(@Url.Content("~/assets/img/pages/page-title-bg5.jpg"));"
            <div class="container">
                <div class="row align-items-center justify-content-center" style="height: 200px;">
                    <div class="col-lg-6">
                        <div class="page-title-content">
                            <div class="title-border">
                                <h2 class="text-uppercase text-white font-weight-bold">@ViewBag.Title</h2>
                            </div>
                            <p class="text-white mb-0"></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- ====================================
    ———	CONTACT INFO SECTION
    ===================================== -->
    <section class="py-9 pt-md-10">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-md-5 col-lg-6 col-xl-7">

                    @using (Html.BeginForm("SetAvatar", "Manage", FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <h4>Elige tu Avatar</h4>
                        <hr />
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                    <select class="image-picker show-html" name="AvatarUrl" id="AvatarUrl">

                        <option data-img-src="../assets/img/dashboard/profile-img-f1.jpg" value="../assets/img/dashboard/profile-img-f1.jpg">Mujer 1</option>
                        <option data-img-src="../assets/img/dashboard/profile-img-f2.jpg" value="../assets/img/dashboard/profile-img-f2.jpg">Mujer 2</option>
                        <option data-img-src="../assets/img/dashboard/profile-img-f3.jpg" value="../assets/img/dashboard/profile-img-f3.jpg">Mujer 3</option>
                        <option data-img-src="../assets/img/dashboard/profile-img-f4.jpg" value="../assets/img/dashboard/profile-img-f4.jpg">Mujer 4</option>
                        <option data-img-src="../assets/img/dashboard/profile-img-f5.jpg" value="../assets/img/dashboard/profile-img-f5.jpg">Mujer 5</option>
                        <option data-img-src="../assets/img/dashboard/profile-img-f6.jpg" value="../assets/img/dashboard/profile-img-f6.jpg">Mujer 6</option>
                        <option data-img-src="../assets/img/dashboard/profile-img-m1.jpg" value="../assets/img/dashboard/profile-img-m1.jpg">Hombre 1</option>
                        <option data-img-src="../assets/img/dashboard/profile-img-m2.jpg" value="../assets/img/dashboard/profile-img-m2.jpg">Hombre 2</option>
                        <option data-img-src="../assets/img/dashboard/profile-img-m3.jpg" value="../assets/img/dashboard/profile-img-m3.jpg">Hombre 3</option>
                        <option data-img-src="../assets/img/dashboard/profile-img-m4.jpg" value="../assets/img/dashboard/profile-img-m4.jpg">Hombre 4</option>
                        <option data-img-src="../assets/img/dashboard/profile-img-m5.jpg" value="../assets/img/dashboard/profile-img-m5.jpg">Hombre 5</option>
                        <option data-img-src="../assets/img/dashboard/profile-img-m6.jpg" value="../assets/img/dashboard/profile-img-m6.jpg">Hombre 6</option>
                        <option data-img-src="../assets/img/dashboard/profile-img-m7.jpg" value="../assets/img/dashboard/profile-img-m7.jpg">Hombre 7</option>
                        <option data-img-src="../assets/img/dashboard/profile-img-m8.jpg" value="../assets/img/dashboard/profile-img-m8.jpg">Hombre 8</option>
                        <option data-img-src="../assets/img/dashboard/profile-img-01.jpg" value="../assets/img/dashboard/profile-img-01.jpg">No Definido</option>
                    </select>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" class="btn btn-primary" value="Enviar" />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>

</div><!-- element wrapper ends -->
@section Scripts {
    <script src="@Url.Content("~/assets/js/image-picker.min.js")"></script>">
    <script type="text/javascript">
        $("#AvatarUrl").imagepicker()
    </script>
}