@using MisViajes.Models
@model RegisterViewModel
@{}

                    <form class="" action="index.html" method="post" id="formRegister">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control bg-smoke", placeholder = "Email" })
                        </div>

                        <div class="form-group">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control bg-smoke", placeholder = "Password" })
                        </div>

                        <div class="form-group">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control bg-smoke", placeholder = "Confirmar Password" })

                        </div>
                        <div class="form-group form-check mb-0">
                            <input type="checkbox" class="form-check-input" id="exampleCheck4">
                            <label class="form-check-label text-gray-color mb-3" for="exampleCheck4">
                                Acepto Los terminos y condiciones.
                            </label>
                        </div>

                        <button type="submit" class="btn btn-primary btn-block text-uppercase">Ingresar</button>

                        <div class="text-uppercase text-center py-3">Or</div>

                        <button type="submit" class="btn btn-facebook btn-block text-uppercase">Ingresar con facebook</button>
                    </form>
  