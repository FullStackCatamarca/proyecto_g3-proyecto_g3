@model IEnumerable<MisViajes.Models.Slides>

@{
    ViewBag.Title = "Slides";
}

<div class="main-wrapper element-title">
    <!-- ====================================
    ———	PAGE TITLE
    ===================================== -->
    <section class="page-title">
        <div class="page-title-img bg-img bg-overlay-darken"
             style="background-image: url(@Url.Content("~/assets/img/pages/page-title-bg5.jpg"));"
            <div class="container">
                <div class="row align-items-center justify-content-center" style="height: 200px;">
                    <div class="col-lg-6">
                        <div class="page-title-content">
                            <div class="title-border">
                                <h2 class="text-uppercase text-white font-weight-bold">@ViewBag.Title</h2>
                            </div>
                            <p class="text-white mb-0"></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- ====================================
    ———	CONTACT INFO SECTION
    ===================================== -->
    <section class="py-9 pt-md-10">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-md-11 col-lg-10 col-xl-10">

                    <p>
                        @Html.ActionLink("Crear Nuevo", "Create")
                    </p>

                    <table class="table table-striped">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.UrlImagen)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Encabezado)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Titulo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Descripcion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UrlDestino)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TxtBoton)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Habilitado)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UrlImagen)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Encabezado)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Titulo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Descripcion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UrlDestino)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TxtBoton)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Habilitado)
                                </td>
                                <td>
                                    @Html.ActionLink("Editar", "Edit", new { id = item.id })
                                    @Html.ActionLink("Detalles", "Details", new { id = item.id })
                                    @Html.ActionLink("Eliminar", "Delete", new { id = item.id })
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </section>

</div><!-- element wrapper ends -->


@section Scripts{}