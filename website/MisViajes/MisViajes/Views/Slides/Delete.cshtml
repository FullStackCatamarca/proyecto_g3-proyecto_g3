@model MisViajes.Models.Slides

@{
    ViewBag.Title = "Borrar";
}

<div class="main-wrapper element-title">
    <!-- ====================================
    ———	PAGE TITLE
    ===================================== -->
    <section class="page-title">
        <div class="page-title-img bg-img bg-overlay-darken"
             style="background-image: url(@Url.Content("~/assets/img/pages/page-title-bg5.jpg"));"
            <div class="container">
                <div class="row align-items-center justify-content-center" style="height: 200px;">
                    <div class="col-lg-6">
                        <div class="page-title-content">
                            <div class="title-border">
                                <h2 class="text-uppercase text-white font-weight-bold">@ViewBag.Title Slides</h2>
                            </div>
                            <p class="text-white mb-0"></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- ====================================
    ———	CONTACT INFO SECTION
    ===================================== -->
    <section class="py-9 pt-md-10">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-md-5 col-lg-6 col-xl-7">

                    <h3>Estas Seguro de borrar esto?</h3>
                    <div>
                        <hr />
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.UrlImagen)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.UrlImagen)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Encabezado)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Encabezado)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Titulo)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Titulo)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Descripcion)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Descripcion)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.UrlDestino)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.UrlDestino)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.TxtBoton)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.TxtBoton)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.Habilitado)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Habilitado)
                            </dd>

                        </dl>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color">
                                <input type="submit" value="Borrar" class="btn btn-primary" />
                            </div>
                            @Html.ActionLink("Volver al listado", "Index")
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

</div><!-- element wrapper ends -->