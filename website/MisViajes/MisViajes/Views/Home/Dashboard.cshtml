@using MisViajes.Extensions

@{
    ViewBag.Title = "Panel De Usuario";
}

<div class="main-wrapper dashboard">

    @Html.Partial("_headerDashboard")


    <!-- ====================================
    ——— USER SECTION
    ===================================== -->
    <section class="py-9">
        <div class="container">
            <div class="mb-7">

                <h2 class="text-uppercase font-size-22 font-weight-semibold">Hola @User.Identity.GetFullName() Bienveniado a <span class="text-primary"> Mis Viajes</span></h2>
                <p>
                    Lorem ipsum dolor sit amet consectetur adipisicing elit sed do eiusmod tempor incididunt ut labore et dolore
                    magna aliqua.
                </p>
            </div>



