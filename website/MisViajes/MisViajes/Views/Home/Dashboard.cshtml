                                <div class="">
                                    <h2 class="font-weight-bold text-white mb-1">@ViewBag.Eventos</h2>
                                    <p class="card-text text-white text-capitalize">Eventos</p>
                                </div>

                                <div class="badge border border-white rounded-circle badge-sm p-0">
