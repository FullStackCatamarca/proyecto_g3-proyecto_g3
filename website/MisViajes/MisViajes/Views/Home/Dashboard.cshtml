                                <div class="">
                                    <h2 class="font-weight-bold text-white mb-1">@ViewBag.Atracciones</h2>
                                    <p class="card-text text-white text-capitalize">Atracciones</p>
                                </div>

                                <div class="badge border border-white rounded-circle badge-sm p-0">
                                    <span class="d-block">
                                        <i class="fa fa-star"></i>
                                    </span>
                                </div>
                            </div>

                            <a href="@Url.Action("index", "Atracciones")" class="btn card-footer text-capitalize text-white font-size-15 d-flex justify-content-between align-items-center">
