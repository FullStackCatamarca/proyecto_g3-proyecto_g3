                        <div class="card card-md text-white rounded-top-0 bg-warning mb-3 mb-md-0">
                            <div class="card-body d-flex align-items-center justify-content-between">
                                <div class="">
                                    <h2 class="font-weight-bold text-white mb-1">@ViewBag.Usuarios</h2>
                                    <p class="card-text text-white text-capitalize">Usuarios</p>
                                </div>

                                <div class="badge border border-white rounded-circle badge-sm p-0">
                                    <span class="d-block">
                                        <i class="fa fa-users "></i>
                                    </span>
                                </div>
                            </div>
                            @if (@ViewBag.Message == "Confirmado")
                            {
                                <a href="@Url.Action("index", "Users")"
                                   class="btn card-footer text-capitalize text-white font-size-15 d-flex justify-content-between align-items-center">
                                    <div class="View-details">
                                        Ver Todos
                                    </div>

                                    <div class="arrow-right">
                                        <i class="fa fa-long-arrow-right"></i>
                                    </div>
                                </a>
                            }
                        </div>
                    </div>

                    <div class="col-md-6 col-lg-3">
                        <div class="card card-md text-white rounded-top-0 bg-info mb-3 mb-lg-0">
